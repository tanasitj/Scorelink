
@{
    //ViewBag.Title = "Select Area";
}

<link href="~/plugins/jquery-selectareas/css/jquery.selectareas.css" rel="stylesheet" />
@*<link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">*@

<section class="content">
    <input type="hidden" id="hdId" value="@ViewBag.Id" />
    <input type="hidden" id="hdDocDetId" value="@ViewBag.DocDetId" />
    <input type="hidden" id="hdDocPageNo" value="@ViewBag.DocPageNo" />
    <input type="hidden" id="hdPageType" value="@ViewBag.PageType" />
    <input type="hidden" id="hdPageFileName" value="@ViewBag.PageFileName" />
    <input type="hidden" id="hdPagePath" value="@ViewBag.PagePath" />
    <input type="hidden" id="hdPatternNo" value="@ViewBag.PatternNo" />

    <div class="container-fluid">
        <!-- ROW 1 -->
        <div class="row">
            <!-- COL 1 -->
            <div class="col-auto connectedSortable">
                <div class="card">
                    <!-- HEAD -->
                    <div class="card-header bg-gradient-primary">
                        <h3 class="card-title"><b><i class="far fa-object-ungroup"></i> Select Areas </b></h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="image-decorator">
                                <table id="tab1" class="table table-bordered">
                                    <thead class="bg-gray-light">
                                        <tr>
                                            <th>Page No. <label id="lbPageNo">@ViewBag.DocPageNo</label></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <img alt="" id="view" src="@ViewBag.PagePath" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /COL 1 -->
            <!-- COL 2 -->
            <div class="col-auto connectedSortable">
                <div class="card">
                    <div class="card-header bg-gradient-primary">
                        <h3 class="card-title"><b><i class="far fa-edit"></i> Pattern @ViewBag.PatternNo</b></h3>
                    </div>
                    <div class="card-body text-center">
                        <img alt="Pattern" id="pattern" src="" />
                        <hr>
                        <button type="button" class="btn bg-gradient-success" id="btnSubmit" value="Submit">Save & Next</button>
                        <button type="button" class="btn bg-gradient-danger" id="btnBack" value="Back">Exit</button>
                    </div>
                </div>
            </div>
            <!-- /COL 2 -->
        </div>
        <!-- /ROW 1 -->
    </div>
</section>

@section scripts{
    <script src="~/plugins/jquery-selectareas/js/jquery.selectareas.js"></script>
    <script src="~/Scripts/Pages/SelectArea.Main.js"></script>
}
